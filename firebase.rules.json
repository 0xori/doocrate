{
  "rules": {
    "tasks": {
      ".read": "auth != null", // All can read
      "$task": {
        ".read": "auth !== null && auth.uid === data.child('assignee').val()",
        ".write": "auth !== null && ( (auth.uid === data.child('assignee').val()) || (auth.uid === data.child('creator').val() ) )"
      }
    }
  }
}
