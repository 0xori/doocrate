{
  "rules": {
    "tasks": {
      ".read": "auth != null", // All authorized can read
      ".write": "auth !== null", // All authorized can read
      "$taskId": {
        ".read": "auth !== null",
        // Creators and Assignee could write to this task
        ".write": "auth !== null && ( (auth.uid === data.child('assignee/id').val()) || (auth.uid === data.child('creator').val() ) )",
        
        // Allow users to assign themselves
        "assignee": {
          ".write": "auth !== null && data.val() === null"
        },
        
        // Anything in task public can be read and write
        "public": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      },
      ".indexOn": "creator"
    },
    "users": {
      ".read": "auth != null", // Authenticated can read
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
